{
  "name": "WhatsApp Image Filter",
  "description": "Filters images from WhatsApp web chats that include a given image.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Filters images from WhatsApp web",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ]
}
